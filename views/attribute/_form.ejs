<form id="<%= form.name %>" name="<%= form.name %>" action="<%= form.action %>" method="POST" >
	<% if( typeof( attribute.id ) == 'number' ){ %><input type="hidden" id="id" name="id" value="<%= attribute.id %>" /> <% } %>
	<% if( form.method == "put" ){ %><input type="hidden" id="_method" name="_method" value="<%= method %>" /> <% } %>
	<p>
		<label for="name" >Name</label>
		<input type="text" id="name" name="name" value="<%= attribute.name %>" />
	</p>
	<div class="clearfix" ></div>
	<p>
		<label for="abbr" >Abbrivation</label>
		<input type="text" id="abbr" name="abbr" value="<%= attribute.abbr %>" />
	</p>
	<div class="clearfix" ></div>
	<p>
		<input type="submit" id="submit" name="submit" value="<%= form.submit %>" />
		<input type="reset" id="reset" name="reset" value="Reset" />
	</p>
	<div class="clearfix" ></div>
</form>