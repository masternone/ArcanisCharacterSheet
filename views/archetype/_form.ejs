<form id="<%= form.name %>" name="<%= form.name %>" action="<%= form.action %>" method="POST" >
	<% if( typeof( archetype.id ) == 'number' ){ %><input type="hidden" id="id" name="id" value="<%= archetype.id %>" /> <% } %>
	<% if( form.method == "put" ){ %><input type="hidden" id="_method" name="_method" value="<%= method %>" /> <% } %>
	<p>
		<label for="name" >Name</label>
		<input type="text" id="name" name="name" value="<%= archetype.name %>" />
	</p>
	<div class="clearfix" ></div>
	<h4>Skills</h4>
	<!-- TODO: put a loop to print out all chosen skill types here -->
	<p><input type="button" id="skillAdd" name="skillAdd" value="Add Skill" /></p>
	<div id="skillAddBefore" class="clearfix" ></div>
	<p>
		<input type="submit" id="submit" name="submit" value="<%= form.submit %>" />
		<input type="reset" id="reset" name="reset" value="Reset" />
	</p>
	<div class="clearfix" ></div>
</form>
<script type="text/javascript">
	<% console.log( 'skillGroup', skillGroup ); %>
	<% console.log( 'skill', skill ); %>
	$( function(){
		$( '#skillAdd' ).skillAdd({
			skill      : <%- JSON.stringify( skill ).replace( /\&quot\;/g, '\'' ) %>,
			skillGroup : <%- JSON.stringify( skillGroup ).replace( /\&quot\;/g, '\'' ) %>,
			type       : <%- JSON.stringify( type ).replace( /\&quot\;/g, '\'' ) %>
		});
	});
</script>