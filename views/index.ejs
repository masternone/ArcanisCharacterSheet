<% if( user && user.roles && user.roles.join().indexOf( 'admin' ) > -1 ){ %>
	<div class="sidebar admin">
		<ul>
			<% for( n in sidebar ){ %>
				<li><a href="<%= sidebar[n].link %>"><%= sidebar[n].text %></a></li>
			<% } %>
		</ul>
	</div>
<% } %>
<% if( user && user.displayName && user.displayName != '' ){ %>
	<div class="character">
		<span class="name">Name</span>
		<span class="rank">Rank</span>
		<span class="link">Link to Character</span>
	</div>
<% } else { %>
	<p>Login to view or create characters</p>
<% } %>

